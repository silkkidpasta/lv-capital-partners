# =============================================================================
# LV CAPITAL PARTNERS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in the actual values
# Never commit .env.local to version control

# =============================================================================
# DATABASE - SUPABASE
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# AUTHENTICATION - CLERK
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# EMAIL - RESEND
# =============================================================================
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=info@lvcapitalpartners.com

# =============================================================================
# PAYMENTS - STRIPE
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_key
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
JWT_SECRET=your_jwt_secret_for_api_tokens

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ANALYTICS=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn_for_error_tracking
HASH_SALT=your_secure_random_salt_for_sensitive_data_hashing

# =============================================================================
# FILE STORAGE
# =============================================================================
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=documents
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lv-capital-documents

# =============================================================================
# EXTERNAL APIS
# =============================================================================
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
DOCUSIGN_USER_ID=your_docusign_user_id
CALENDLY_API_KEY=your_calendly_api_key

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
NEXT_PUBLIC_VERCEL_URL=your_vercel_deployment_url
ANALYZE=false
